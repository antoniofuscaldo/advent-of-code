{
  "name": "advent-of-code",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "new:day": "node scripts/new-day.js"
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "lint-staged": "^16.2.7",
    "@eslint/js": "^9.39.1",
    "globals": "^16.5.0"
  }
}
