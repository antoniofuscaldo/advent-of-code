{
  "name": "advent-of-code",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "new:day": "node scripts/new-day.js"
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.0",
    "prettier": "^3.3.3",
    "lint-staged": "^15.2.10",
    "@eslint/js": "^9.13.0",
    "globals": "^15.11.0"
  }
}
